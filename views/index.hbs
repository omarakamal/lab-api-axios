<section class="container">
  <h1>Ironhack Characters API</h1>

 {{#if successMessage}}
    <span class="success">
      {{successMessage}}
    </span>
  {{/if}}
  {{#if errorMessage}}
    <span class="error">
      {{errorMessage}}
    </span>
  {{/if}}

  <div class="characters-container">
    <div class="character-info">
      <div class="name">{{characterDetail.name}}</div>
      <div class="occupation">{{characterDetail.occupation}}</div>
      <div class="cartoon">Is a Cartoon?</div>
      <div class="weapon">{{characterDetail.weapon}}</div>
    </div>
  </div>

  <section class="operations">
    <div class="operation">
      <a href="/all" id="fetch-all" class="a-btn">Fetch all</a>
    </div>

    <div class="operation">
      <form action= "/search">
        <label>Search by ID:
          <input type="text" name="id" />
        </label>
        <button id="fetch-one">Fetch one</button>
      </form>
    </div>

    <div class="operation delete">
      <form action="/search" method="POST">
        <label>Delete by ID:
          <input type="text" name="id" />
        </label>
        <button id="delete-one">Delete one</button>
      </form>
    </div>

  </section>
</section>

<section class="container">
  <section class="form-container">
    <h2>New Character</h2>
    <form
      id="new-character-form"
      class="character-form"
      action="/search/new-character"
      method="POST"
    >
      <div class="field">
        <label>Name:
          <input type="text" name="name" />
        </label>
      </div>

      <div class="field">
        <label>Occupation:
          <input type="text" name="occupation" />
        </label>
      </div>

      <div class="field">
        <label>Weapon:
          <input type="text" name="weapon" />
        </label>
      </div>

      <div class="field">
        <label>Is a Cartoon:
          <input name="cartoon" type="checkbox" />
        </label>
      </div>

      <button id="send-data">Create</button>
    </form>
  </section>

  <section class="form-container">
    <h2>Edit Character</h2>
    <form
      id="edit-character-form"
      class="character-form"
      method="POST"
      action="/search/edit"
    >

      <div class="field">
        <label>ID:
          <input type="text" name="id" />
        </label>
      </div>

      <div class="field">
        <label>Name:
          <input type="text" name="name" />
        </label>
      </div>

      <div class="field">
        <label>Occupation:
          <input type="text" name="occupation" />
        </label>
      </div>

      <div class="field">
        <label>Weapon:
          <input type="text" name="weapon" />
        </label>
      </div>
      <div class="field">
        <label>Is a Cartoon:
          <input name="cartoon" type="checkbox" />
        </label>
      </div>

      <button id="send-data">Update</button>
    </form>
  </section class="characters-container">

  {{#each character}}

  
      <div class="character-info">
        <ul>
          <div>{{name}}</div>
          <div>{{occupation}}</div>
          <div>{{weapon}}</div>
        </ul>
      </div>
    

  {{/each}}
</section>